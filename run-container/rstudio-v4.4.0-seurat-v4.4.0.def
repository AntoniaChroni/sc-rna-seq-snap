  #Rscript -e 'devtools::install_version("tidyverse", "1.3.0")'
  #Rscript -e 'install.packages("devtools")'
  #Rscript -e 'install.packages("remotes")'
  #Rscript -e 'remotes::install_version("Seurat", "4.4.0", repos = c("https://satijalab.r-universe.dev", getOption("repos")))'
